.form-book

  &__form
    border: 1px solid gray
    padding: 20px

  &__input
    margin: 20px 0
    background: transparent
    height: 35px
    outline: none;
    border: 1px solid gray
    width: 100%
    box-sizing: border-box
    padding-left: 20px
    &::placeholder
      color: dray
    &.ng-touched.ng-invalid
      border: 1px solid red;
    &.ng-touched.ng-valid
      border: 1px solid green;


  &__go-back
    font-size: 24px
    font-weight: bold
    margin-bottom: 50px

  &__go-back,
  &__button
    display: inline-block
    border: 1px solid gray
    padding: 5px
    cursor: pointer
    &:hover
      background: gray
