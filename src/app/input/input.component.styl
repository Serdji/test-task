.input

  &__input
    width: 100%
    box-sizing border-box
    height: 27px

  &__table
    display: table
    border-spacing: 15px 0;
    margin-left: -15px;
    margin-right: -15px;

  &__row
    display: table-row

  &__cell
    display: table-cell

    &._left-cell
      width: 100%

      span
        font-size: 12px
        color: #999999

  &__button
    white-space: nowrap
    display: inline-block
    border: 1px solid gray
    padding: 5px
    cursor: pointer
    box-sizing: border-box
    &:hover
      background: gray

    &._revers
      width: 100%
      margin-top: 29px
      text-align: center
