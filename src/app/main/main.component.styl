.main

  &__item-book
    margin-bottom: 15px

  &__button
    display: inline-block
    border: 1px solid gray
    padding: 5px
    cursor: pointer
    &:hover
      background: gray

    &-wrapper
      display: flex
      width: 100%


  &__sorting
    border: 1px solid gray
    padding: 5px
    display: flex
    margin-left: auto

  &__year,
  &__author
    font-weight: bold
    cursor: pointer

  &__year
    margin-right: 10px

  &__content
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between
    margin-top: 50px
